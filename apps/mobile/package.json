{
  "name": "@nexusplay/mobile",
  "version": "2.0.0",
  "private": true,
  "description": "NexusPlay Capacitor mobile application",
  "scripts": {
    "build": "npm run build --workspace=@nexusplay/web && cap sync",
    "build:android": "npm run build && cap build android",
    "build:ios": "npm run build && cap build ios",
    "sync": "cap sync",
    "sync:android": "cap sync android",
    "sync:ios": "cap sync ios",
    "run:android": "cap run android",
    "run:ios": "cap run ios",
    "open:android": "cap open android",
    "open:ios": "cap open ios",
    "add:android": "cap add android",
    "add:ios": "cap add ios",
    "clean": "rm -rf .turbo android ios"
  },
  "dependencies": {
    "@capacitor/android": "^6.1.2",
    "@capacitor/app": "^6.0.1",
    "@capacitor/cli": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/device": "^6.0.1",
    "@capacitor/haptics": "^6.0.1",
    "@capacitor/ios": "^6.1.2",
    "@capacitor/keyboard": "^6.0.2",
    "@capacitor/local-notifications": "^6.0.2",
    "@capacitor/push-notifications": "^6.0.2",
    "@capacitor/splash-screen": "^6.0.2",
    "@capacitor/status-bar": "^6.0.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.2"
  }
}